<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <reference id="jahiaOAuthService" interface="org.jahia.modules.jahiaoauth.service.JahiaOAuthService" availability="mandatory"/>
    <reference id="jahiaOAuthCacheService" interface="org.jahia.modules.jahiaoauth.service.JahiaOAuthCacheService" availability="mandatory"/>
    <reference id="jcrTemplate" interface="org.jahia.api.content.JCRTemplate" availability="mandatory"/>
    <reference id="JahiaUserManagerService" interface="org.jahia.api.usermanager.JahiaUserManagerService" availability="mandatory"/>
    <reference id="settingsBean" interface="org.jahia.api.settings.SettingsBean"/>

    <bean id="jcrOAuthProviderMapperImpl" class="org.jahia.modules.jcroauthprovider.impl.JCROAuthProviderMapperImpl">
        <property name="jahiaUserManagerService" ref="JahiaUserManagerService"/>
        <property name="jcrTemplate" ref="jcrTemplate"/>
        <property name="serviceName" value="jcrOAuthProvider"/>
        <property name="properties">
            <list>
                <map>
                    <entry key="name" value="j:title"/>
                    <entry key="valueType" value="string"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:firstName"/>
                    <entry key="valueType" value="string"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:lastName"/>
                    <entry key="valueType" value="string"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:gender"/>
                    <entry key="valueType" value="string"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:birthDate"/>
                    <entry key="valueType" value="date"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:email"/>
                    <entry key="valueType" value="email"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:organization"/>
                    <entry key="valueType" value="string"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:function"/>
                    <entry key="valueType" value="string"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:income"/>
                    <entry key="valueType" value="string"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:about"/>
                    <entry key="valueType" value="string"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:linkedInID"/>
                    <entry key="valueType" value="string"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:twitterID"/>
                    <entry key="valueType" value="string"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:facebookID"/>
                    <entry key="valueType" value="string"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:skypeID"/>
                    <entry key="valueType" value="string"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
            </list>
        </property>
    </bean>

    <bean id="jcrOAuthValve" class="org.jahia.params.valves.jcroauth.JCROAuthValve">
        <property name="jahiaOAuthService" ref="jahiaOAuthService"/>
        <property name="jahiaOAuthCacheService" ref="jahiaOAuthCacheService"/>
        <property name="jcrOAuthProviderMapperImpl" ref="jcrOAuthProviderMapperImpl"/>
        <property name="jahiaUserManagerService" ref="JahiaUserManagerService"/>
        <property name="settingsBean" ref="settingsBean"/>
        <property name="preserveSessionAttributes" value="${preserveSessionAttributesOnLogin:wemSessionId}"/>
    </bean>

    <service ref="jcrOAuthProviderMapperImpl" interface="org.jahia.modules.jahiaoauth.service.MapperService">
        <service-properties>
            <entry key="mapperServiceName" value="jcrOAuthProvider"/>
        </service-properties>
    </service>
</blueprint>