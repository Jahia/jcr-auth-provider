<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <osgi:reference id="jahiaOAuth" interface="org.jahia.modules.jahiaoauth.service.JahiaOAuth" availability="mandatory"/>

    <bean id="dataLoader" class="org.jahia.modules.jcroauthdatamapper.DataLoader" init-method="onStart">
        <property name="jahiaOAuth" ref="jahiaOAuth"/>
        <property name="mapperServiceName" value="jcrOAuthDataMapper"/>
        <property name="mapperProperties">
            <list>
                <map>
                    <entry key="name" value="j:title"/>
                    <entry key="valueType" value="String"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:firstName"/>
                    <entry key="valueType" value="String"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:lastName"/>
                    <entry key="valueType" value="String"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:gender"/>
                    <entry key="valueType" value="String"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:birthDate"/>
                    <entry key="valueType" value="date"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:email"/>
                    <entry key="valueType" value="String"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:organization"/>
                    <entry key="valueType" value="String"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:function"/>
                    <entry key="valueType" value="String"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:income"/>
                    <entry key="valueType" value="String"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:about"/>
                    <entry key="valueType" value="String"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:linkedInID"/>
                    <entry key="valueType" value="String"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:twitterID"/>
                    <entry key="valueType" value="String"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:facebookID"/>
                    <entry key="valueType" value="String"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
                <map>
                    <entry key="name" value="j:skypeID"/>
                    <entry key="valueType" value="String"/>
                    <entry key="mandatory">
                        <value type="boolean">false</value>
                    </entry>
                </map>
            </list>
        </property>
    </bean>

    <bean id="jcrOAuthDataMapper" class="org.jahia.modules.jcroauthdatamapper.impl.JCROAuthDataMapperImpl">
        <property name="jahiaUserManagerService" ref="JahiaUserManagerService"/>
        <property name="jcrTemplate" ref="jcrTemplate"/>
    </bean>

    <bean id="jcrOAuthValve" class="org.jahia.params.valves.jcroauth.JCROAuthValve">
        <property name="jahiaOAuth" ref="jahiaOAuth"/>
        <property name="dataLoader" ref="dataLoader"/>
        <property name="jahiaUserManagerService" ref="JahiaUserManagerService"/>
        <property name="cookieAuthConfig" ref="cookieAuthConfig"/>
        <property name="preserveSessionAttributes" value="${preserveSessionAttributesOnLogin:wemSessionId}" />
    </bean>

    <osgi:service ref="jcrOAuthDataMapper" interface="org.jahia.modules.jahiaoauth.service.Mapper">
        <osgi:service-properties>
            <entry key="mapperServiceName" value="jcrOAuthDataMapper"/>
        </osgi:service-properties>
    </osgi:service>
</beans>