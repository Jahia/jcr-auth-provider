<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <osgi:reference id="jahiaOAuth" interface="org.jahia.modules.jahiaoauth.service.JahiaOAuth" availability="mandatory"/>

    <bean id="dataLoader" class="org.jahia.modules.jcroauthdatamapper.DataLoader" init-method="onStart">
        <property name="jahiaOAuth" ref="jahiaOAuth"/>
        <property name="mapperKey" value="jcrOAuthDataMapper"/>
        <property name="mapperActionName" value="jcrOAuthAction"/>
        <property name="mapperProperties">
            <map>
                <entry key="j:gender">
                    <map>
                        <entry key="valueType" value="String"/>
                        <entry key="mandatory">
                            <value type="boolean">false</value>
                        </entry>
                    </map>
                </entry>
                <entry key="j:firstName">
                    <map>
                        <entry key="valueType" value="String"/>
                        <entry key="mandatory">
                            <value type="boolean">false</value>
                        </entry>
                    </map>
                </entry>
                <entry key="j:lastName">
                    <map>
                        <entry key="valueType" value="String"/>
                        <entry key="mandatory">
                            <value type="boolean">false</value>
                        </entry>
                    </map>
                </entry>
                <entry key="j:organization">
                    <map>
                        <entry key="valueType" value="String"/>
                        <entry key="mandatory">
                            <value type="boolean">false</value>
                        </entry>
                    </map>
                </entry>
                <entry key="j:email">
                    <map>
                        <entry key="valueType" value="String"/>
                        <entry key="mandatory">
                            <value type="boolean">false</value>
                        </entry>
                    </map>
                </entry>
            </map>
        </property>
    </bean>

    <bean class="org.jahia.modules.jcroauthdatamapper.action.JCROAuth">
        <property name="name" value="jcrOAuthAction"/>
        <property name="requiredPermission" value="canSetupJahiaOAuth"/>
    </bean>
</beans>